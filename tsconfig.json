{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/components/*": ["./src/components/*"],
      "@/ui/*": ["./src/components/ui/*"],
      "@/navigation/*": ["./src/components/navigation/*"],
      "@/auth/*": ["./src/components/auth/*"],
      "@/docs/*": ["./src/components/docs/*"],
      "@/api/*": ["./src/components/api/*"],
      "@/three/*": ["./src/components/threejs/*"],
      "@/admin/*": ["./src/components/admin-panel/*"],
      "@/limit/*": ["./src/app/api/config/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/lib/db/schema"],
  "exclude": ["node_modules"]
}
